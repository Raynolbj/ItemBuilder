<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ItemBuilder.Settings">

    <VerticalStackLayout>

        <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand" VerticalOptions="Center" Spacing="2">
            <Image Source="settings.png" HorizontalOptions="CenterAndExpand" WidthRequest="400" HeightRequest="30" Margin="0,20,0,8"/>
            <BoxView HeightRequest="2" Color="#C8AA6E" HorizontalOptions="CenterAndExpand" WidthRequest="350" Margin="0,0,0,20"/>
        </StackLayout>

        <FlexLayout Direction="Row" JustifyContent="Center" AlignItems="Center" Wrap="Wrap">

            <!-- First HorizontalStackLayout -->
            <HorizontalStackLayout HorizontalOptions="CenterAndExpand" FlexLayout.Grow="1" Margin="5">
                <Image Source="music.png" HorizontalOptions="CenterAndExpand" WidthRequest="100" HeightRequest="20"/>
                <Switch x:Name="musicSwitch" Toggled="MusicSwitch_Toggled" ThumbColor="#F0E6D2" OnColor="#C89B3C"/>
            </HorizontalStackLayout>

            <!-- Second HorizontalStackLayout -->
            <HorizontalStackLayout Spacing="10" HorizontalOptions="CenterAndExpand" Padding="-45,0,0,0" FlexLayout.Grow="1" Margin="5">
                <Image Source="volume.png" HorizontalOptions="CenterAndExpand" WidthRequest="100" HeightRequest="30" />
                <Slider x:Name="slider" Minimum="0.0" Maximum="1.0" Value="0.5" WidthRequest="100" ThumbColor="#C89B3C" BackgroundColor="#F0E6D2" ValueChanged="Slider_ValueChanged"/>
            </HorizontalStackLayout>

        </FlexLayout>

    </VerticalStackLayout>

</ContentPage>

